<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="8dp"
    >

    <com.hfad.lzr.ui.main.CustomLinearLayout
        android:id="@+id/cll"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="vertical"
        android:background="@drawable/selector"
        android:paddingTop="8dp"
        android:layout_gravity="right"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:gravity="center"
            android:layout_marginBottom="2dp">

            <ImageView
                android:id="@+id/jersey_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_basketaball_jersey"


                />

            <TextView
                android:id="@+id/player_game_number"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignEnd="@id/jersey_id"
                android:layout_alignLeft="@+id/jersey_id"
                android:layout_alignStart="@id/jersey_id"
                android:layout_alignRight="@id/jersey_id"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:textSize="12sp"
                android:text="text"
                />

        </RelativeLayout>



    <TextView
        android:id="@+id/lastNameTV"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:text="prezime"
        android:textColor="@color/colorPrimary"
        android:textSize="12sp"
        android:layout_gravity="center"
        android:layout_marginBottom="4dp"/>

        />

    </com.hfad.lzr.ui.main.CustomLinearLayout>
<View
    android:id="@+id/dividerView"
    android:layout_width="36dp"
    android:layout_height="2dp"
    android:layout_marginTop="8dp"
    android:background="@color/colorAccent"
    android:layout_gravity="center"
    android:visibility="gone"/>

</LinearLayout>
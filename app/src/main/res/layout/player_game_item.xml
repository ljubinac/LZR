<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="110dp"
    android:layout_margin="2dp"
    android:elevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:gravity="center"
            android:minWidth="40dp"
            android:minHeight="40dp">

            <ImageView
                android:id="@+id/jersey_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/basketballjersey"
                android:background="@color/team_bg"/>

            <TextView
                android:id="@+id/player_game_number"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignEnd="@id/jersey_id"
                android:layout_alignLeft="@+id/jersey_id"
                android:layout_alignStart="@id/jersey_id"
                android:layout_alignRight="@id/jersey_id"
                android:gravity="center"
                android:textColor="@color/text"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="text"
                />

        </RelativeLayout>
    


    <TextView
        android:id="@+id/lastNameTV"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="prezime"
        android:textColor="@color/text"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_gravity="center"/>

        />

    </LinearLayout>

</androidx.cardview.widget.CardView>
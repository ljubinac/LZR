<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TeamsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/choose_league"
            android:textStyle="bold"
            android:textColor="@color/text"
            />

        <Spinner
            android:id="@+id/choose_league"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:entries="@array/leagues" />


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginVertical="15dp"
        android:text="@string/standings"
        android:textStyle="bold"
        android:textSize="22dp"
        android:textColor="@color/text"
        />

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="4dp"

        >

        <TextView
            android:id="@+id/positionTitleTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/positionTitleTV"
            android:textColor="@color/text"
            android:textStyle="bold"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/teamNameTitleTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="@string/teamNameTitleTV"
            android:textColor="@color/text"
            android:textStyle="bold"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/totalGamesTitleTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/totalGamesTitleTV"
            android:textColor="@color/text"
            android:textStyle="bold"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/wGamesTitleTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/wGamesTitleTV"
            android:textColor="@color/text"
            android:textStyle="bold"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/lGamesTitleTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/lGamesTitleTV"
            android:textColor="@color/text"
            android:textStyle="bold"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/ptsPlusTitleTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/ptsPlusTitleTV"
            android:textColor="@color/text"
            android:textStyle="bold"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/ptsMinusTitleTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/ptsMinusTitleTV"
            android:textColor="@color/text"
            android:textStyle="bold"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/pointsTitleTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/pointsTitleTV"
            android:textColor="@color/text"
            android:textStyle="bold"
            android:textSize="18sp" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/standingsRV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:scrollbars="vertical"
        />

    <Button
        android:id="@+id/createPdf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_save"
        android:onClick="createPdf"/>

    <Button
        android:id="@+id/sharePdf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_share"
        />


</LinearLayout>
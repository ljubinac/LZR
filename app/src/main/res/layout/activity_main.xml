<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_margin="40dp"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/lzr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lzr"
        style="@style/text_tile"
         />

    <Button
        android:id="@+id/create_game"
        android:width="130dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="@string/create_game"
        style="@style/btn"
        android:onClick="createGame"/>

    <Button
        android:id="@+id/teams"
        android:width="130dp"
        android:background="@color/blue_btn"
        android:textColor="@color/text_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/teams"
        android:onClick="teams"/>

    <Button
        android:id="@+id/create_team"
        android:width="130dp"
        style="@style/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/create_team"
        android:onClick="createTeam"/>

    <Button
        android:id="@+id/table"
        android:width="130dp"
        style="@style/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/standings"
        android:onClick="tableStandings"/>

    <Button
        android:id="@+id/settings"
        android:width="130dp"
        style="@style/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/button_settings"
        android:onClick="buttonSettings" />

    <Button
        android:id="@+id/quit"
        android:width="130dp"
        style="@style/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/quit"/>

</LinearLayout>
</ScrollView>
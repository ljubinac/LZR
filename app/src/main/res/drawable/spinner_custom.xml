<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <item>
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/white" ></solid>

                    <corners android:radius="8dp" />

                    <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
                    <stroke android:width="2dp" android:color="@color/white" />
                </shape>
            </item>
            <item android:left="100dp">
                <rotate android:fromDegrees="90">
                    <shape android:shape="line">
                        <stroke android:width="1dp" android:color="#14212121">

                        </stroke>
                    </shape>
                </rotate>
            </item>
            <item>
                <bitmap android:gravity="right" android:src="@drawable/baseline_arrow_drop_down_black_18" android:tint="@color/drop_down_arrow" tools:ignore="VectorDrawableCompat" />
            </item>

        </layer-list>
    </item>



</selector>
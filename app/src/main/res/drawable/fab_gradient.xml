<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="oval">
            <gradient
                android:angle="270"
                android:startColor="@color/orange_start"
                android:endColor="@color/orange_end" />
            <size
                android:width="56dp"
                android:height="56dp" />
        </shape>
    </item>
    <item
        android:left="20dp"
        android:right="20dp">
        <shape android:shape="line">
            <stroke
                android:width="2dp"
                android:color="@color/inside_button" />
        </shape>
    </item>
    <item
        android:left="20dp"
        android:right="20dp">
        <rotate
            android:fromDegrees="90">
            <shape android:shape="line">
                <stroke
                    android:width="2dp"
                    android:color="@color/inside_button" />
            </shape>
        </rotate>
    </item>
</layer-list>
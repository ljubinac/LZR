<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#29F9AA33" />
            <corners
                android:radius="8dp" />
            <padding
                android:left="10dp"
                android:top="12dp"
                android:right="10dp"
                android:bottom="12dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="@color/colorAccent"
                android:endColor="@color/colorAccent"
                android:angle="270" />
            <!--            <stroke-->
            <!--                android:width="1dp"-->
            <!--                android:color="#53933f" />-->
            <corners
                android:radius="8dp" />
            <padding
                android:left="10dp"
                android:top="12dp"
                android:right="10dp"
                android:bottom="12dp" />
        </shape>
    </item>
</selector>